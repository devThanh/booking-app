<div class="mt-4">
                        <h1>SỬA KHÁCH SẠN</h1>
                        <form action="/hotel/{{hotel._id}}/edit?_method=PUT" method="POST">
                            <div class="mb-3 px-5">
                                <label for="name" class="form-label">Tên khách sạn</label>
                                <input type="text" class="form-control" id="name" name="name" value="{{hotel.name}}">
                            </div>
                            <div class="mb-3 px-5">
                                <label for="type" class="form-label">Loại</label>
                                <textarea class="form-control" id="type" rows="3" name="type" >{{hotel.type}}</textarea>
                            </div>
                            <div class="mb-3 px-5">
                                <label for="city" class="form-label">Tên thành phố</label>
                                <input type="text" class="form-control" id="city" name="city"  value="{{hotel.city}}">
                            </div>
                            <div class="mb-3 px-5">
                                <label for="description" class="form-label">Mô tả</label>
                                <input type="text" class="form-control" id="description" name="description"  value="{{hotel.description}}">
                            </div>
                            <div class="mb-3 px-5">
                                <label for="title" class="form-label">Tiêu đề</label>
                                <input type="text" class="form-control" id="title" name="title"  value="{{hotel.title}}">
                            </div>
                            <div class="mb-3 px-5">
                                <label for="address" class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" id="address" name="address"  value="{{hotel.address}}">
                            </div>
                            <div class="mb-3 px-5">
                                <label for="distance" class="form-label">Khoảng cách</label>
                                <input type="text" class="form-control" id="distance" name="distance"  value="{{hotel.distance}}">
                            </div>
                            <div class="mb-3 px-5">
                                <label for="price" class="form-label">Giá</label>
                                <input type="text" class="form-control" id="price" name="price"  value="{{hotel.price}}">
                            </div>
                            
                            <div class="text-center">
                                    <button type="submit" class="btn-lg btn-success mx-auto px-5">Thêm</button>
                            </div>
                                
                        </form>